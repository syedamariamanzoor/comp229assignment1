<%- include ../partials/header.ejs %>
<%- include ../partials/main-nav.ejs %>



    <main class="container">

      <div class="card border-light mb-3">
        <div class="p-5 card-body">
            <div class="row g-0">
              <div class="col-md-12">
                  <h5 class="display-6 mb-3"> <%= title %></h5>
              </div>
            </div>
          
        </div>
      </div>

     <div class="row">
         <div class="col-md-6">
         <form class="form" method="post">
             <div class="form-group">
                 <input type="hidden" id="hfContactId" value="<%= contact.id %>">
                 <lable for="txtFirstName">First name</lable>
                 <input type="text" id="txtFirstName" class="form-control" value="<%= contact.firstname %>" name="firstname">
             </div>

             <div class="form-group">
                <lable for="txtFirstName">Last name</lable>
                <input type="text" id="txtLastName" class="form-control"  value="<%= contact.lastname %>" name="lastname">
            </div>
            <div class="form-group">
                <lable for="txtFirstName">Phone</lable>
                <input type="text" id="txtPhone" class="form-control"  value="<%= contact.phone %>" name="phone">
            </div>

            <div class="form-group">
                <lable for="txtFirstName">Email</lable>
                <input type="text" id="txtEmail" class="form-control"  value="<%= contact.email %>" name="email">
            </div>

            <div class="form-group mt-5">
                <button class="btn btn-primary btn-sm" type="submit"><i class="fa fa-pen"></i> Edit </button>
                <a type="button" href="/businesscontact/delete/<%= contact._id%>" class="btn btn-danger btn-sm delete" ><i class="fa fa-trash"></i> Delete</a>
                <a class="btn btn-warning btn-sm" href="/businesscontact"><i class="fa fa-times"></i> Cancel </a>
            </div>
            

         </form> 
            

         </div>
     </div>
    </main>

    
    <%- include ../partials/bottom-nav.ejs %>
   <%- include ../partials/footer.ejs %>

